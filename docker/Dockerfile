# Stage 1: Сборка Go-приложения
FROM golang:1.22 AS builder

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем go.mod и go.sum файлы
COPY go.mod go.sum ./

# Загружаем все зависимости
RUN go mod download

# Копируем исходный код в рабочую директорию контейнера
COPY . .

# Собираем Go-приложение
RUN go build -o main .

# Stage 2: Создаем минимальный образ для запуска приложения
FROM alpine:latest

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем бинарный файл из стадии сборки
COPY --from=builder /app/main .

# Открываем порт 8080 для внешнего мира
EXPOSE 8080

# Команда для запуска исполняемого файла
CMD ["./main"]

